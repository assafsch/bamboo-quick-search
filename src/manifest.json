{
  "manifest_version": 2,

  "name": "Search Bamboo",
  "description": "This extension allows to easily search and navigate Atlasian Bamboo build plans from the omnibox",
  "version": "1.0.2",

  "background": {
    "scripts": ["background.js"]
  },
  "omnibox": { "keyword" : "sb" },
  "minimum_chrome_version": "9",
  "manifest_version": 2,
  "permissions": [
    "https://*/",
    "cookies",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
